{
	"name": "@xotoboil-multifront/multiframework-frontends",
	"version": "0.0.0",
	"description": "global multiframework",
	"license": "ISC",
	"private": true,
	"workspaces": {
		"nohoist": [
			"**"
		],
		"packages": [
			"packages/*",
			"registries/*"
		]
	},
	"scripts": {
		"boot": "yarn initialize && yarn boot:common && yarn run boot:ui && yarn boot:ui-react && yarn boot:ui-vue && yarn boot:ui-angular",
		"boot:ui-react": "yarn workspace @xotoboil-multifront/ui-react run build",
		"boot:ui-vue": "yarn workspace @xotoboil-multifront/ui-vue run build",
		"boot:ui-angular": "yarn workspace @xotoboil-multifront/ui-angular run build",
		"boot:common": "yarn workspace @xotoboil-multifront/common run build",
		"boot:ui": "yarn workspace @xotoboil-multifront/ui run build",
		"start": "turbo run start --filter=./packages/*",
		"build": "turbo run build --filter=./packages/*",
		"start:shell": "yarn workspace @xotoboil-multifront/shell run start",
		"start:portal": "yarn workspace @xotoboil-multifront/portal run start",
		"start:app1": "yarn workspace @xotoboil-multifront/app1 run start",
		"start:app2": "yarn workspace @xotoboil-multifront/app2 run start",
		"start:app3": "yarn workspace @xotoboil-multifront/app3 run start",
		"initialize": "yarn install --legacy-peer-deps",
		"lint:es": "eslint -f codeframe --ignore-path .eslintignore --fix",
		"lint:style": "stylelint --config .stylelintrc.js --fix",
		"lint:prettify": "prettier --config .prettierrc.js --ignore-path .prettierignore --write .",
		"test": "yarn workspace @xotoboil-multifront/* run test",
		"test:e2e": "yarn workspace @xotoboil-multifront/* run test:e2e"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/jest": "^27.0.2",
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "^5.3.0",
		"@typescript-eslint/parser": "^5.3.0",
		"eslint": "^8.2.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-formatter-codeframe": "^7.32.1",
		"eslint-plugin-jest": "^25.2.3",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-unused-imports": "^1.1.5",
		"jest": "^27.3.1",
		"prettier": "^2.4.1",
		"stylelint": "^14.0.1",
		"stylelint-config-standard": "^23.0.0",
		"stylelint-order": "^5.0.0",
		"stylelint-scss": "^4.0.0",
		"ts-jest": "^27.0.7",
		"turbo": "^1.6.3",
		"typescript": "^4.8.4"
	}
}
