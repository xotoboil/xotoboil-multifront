{
	"name": "@xotoboil-multifront/multiframework-frontends",
	"version": "1.0.0",
	"description": "global multiframework",
	"license": "ISC",
	"private": true,
	"workspaces": {
		"nohoist": [
			"**"
		],
		"packages": [
			"packages/**",
			"registries/**"
		]
	},
	"scripts": {
		"boot": "yarn initialize && yarn run boot:ui && yarn run boot:stencil",
		"boot:ui": "yarn workspace @xotoboil-multifront/ui run build",
		"boot:stencil": "yarn workspace @xotoboil-multifront/stencil run build",
		"start": "lerna exec yarn start --parallel",
		"start:shell": "yarn workspace @xotoboil-multifront/shell run start",
		"start:portal": "yarn workspace @xotoboil-multifront/portal run start",
		"start:app1": "yarn workspace @xotoboil-multifront/app1 run start",
		"start:app2": "yarn workspace @xotoboil-multifront/app2 run start",
		"start:app3": "yarn workspace @xotoboil-multifront/app3 run start",
		"initialize": "yarn install --legacy-peer-deps",
		"lerna:diff": "lerna diff",
		"lint:es": "sh utilities/scripts/lintify/Lintify.sh",
		"lint:style": "sh utilities/scripts/stylify/Stylify.sh",
		"format:prettify": "sh utilities/scripts/prettify/Prettify.sh",
		"test": "yarn workspace @xotoboil-multifront/* run test",
		"test:e2e": "yarn workspace @xotoboil-multifront/* run test:e2e"
	},
	"dependencies": {
		"lerna": "^4.0.0"
	},
	"devDependencies": {
		"jest": "^27.3.1",
		"@types/jest": "^27.0.2",
		"ts-jest": "^27.0.7",
		"@types/node": "^16.11.6",
		"stylelint": "^14.0.1",
		"stylelint-config-standard": "^23.0.0",
		"stylelint-order": "^5.0.0",
		"stylelint-scss": "^4.0.0",
		"prettier": "^2.4.1",
		"eslint": "^8.2.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-unused-imports": "^1.1.5",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-jest": "^25.2.3",
		"@typescript-eslint/parser": "^5.3.0",
		"@typescript-eslint/eslint-plugin": "^5.3.0",
		"typescript": "^4.4.4"
	}
}
