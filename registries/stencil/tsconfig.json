{
	"compileOnSave": true,
	"compilerOptions": {
		"baseUrl": ".",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"types": ["node", "jest"],
		"strict": true,
		"paths": {
			"@/*":["src/*"]
		},
		"noImplicitAny": false,
		"declaration": true,
		"declarationDir": "dist/__types__",
    "jsx": "react",
    "jsxFactory": "h"
	},
	"include": ["src/**/*"]
}
